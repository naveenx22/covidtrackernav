    <div class="row" style="margin-left: 20px;">
        <div class="col-lg-4 col-md-12">
            <div class="card bg-warning mb-3" style="max-width: 22rem; height: 15rem;">
                <div class="card-header"><strong>Total Confirmed count</strong></div>
                <div class="card-body text-success">
                    <h1 class="card-text" id="confirmed"></h1>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
           <div class="card bg-danger mb-3" style="max-width: 22rem; height: 15rem;">
                <div class="card-header"><strong>Total Deaths count</strong></div>
                <div class="card-body text-success">
                    <h1 class="card-text" id="deaths"></h1>
                </div>
            </div>
            </div>
            <div class=" col-lg-4 col-md-12 ">
                <div class="card bg-success mb-3" style="max-width: 22rem; height: 15rem;">
                <div class="card-header"><strong>Total recovered count</strong></div>
                <div class="card-body text-success">
                    <h1 class="card-text" id="recovered"></h1>
                </div>
            </div>
                </div>
              </div>  

              <div class="heading" align="center"><br><br>
                <h3> For State-wise Realtime Information, Click <a href="https://www.mohfw.gov.in/" target="_blank">here</a> </h3>
                <p>(Link redirects to Governement website)</p><br><br>
              </div>
              <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
              <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
            <script>
            fetch('https://pomber.github.io/covid19/timeseries.json').then(
                res => {
                    res.json().then(
                        data => {

                            var india = 0; // variable to store india index from the json file
                            for (let i = 0; i < Object.keys(data).length; i++) {
                                if (Object.keys(data)[i] == 'India') {
                                    india = i; // finding india in the json
                                }
                            }
                            var todaysobjectlength = Object.values(data)[india].length - 1; // accessing today's object from india array
                            var country = Object.keys(data)[india]; //printing country name
                            var confirmed = Object.values(data)[india][todaysobjectlength]['confirmed'];
                            var deaths = Object.values(data)[india][todaysobjectlength]['deaths'];
                            var recovered = Object.values(data)[india][todaysobjectlength]['recovered'];
                            console.log(country, confirmed, deaths, recovered);

                            var recoveredhtml = '<strong><br><center>'+recovered+'</center></strong>';
                            var deathshtml = '<strong><br><center>'+deaths+'</center></strong>';
                            var confirmedhtml = '<strong><br><center>'+confirmed+'</center></strong>';

                            document.getElementById("recovered").innerHTML = recoveredhtml;
                            document.getElementById("confirmed").innerHTML = confirmedhtml;
                            document.getElementById("deaths").innerHTML = deathshtml;
                        }

                    )
                }

            )
            </script>
