      <script>
      	var x= 3;
      	

        fetch('https://pomber.github.io/covid19/timeseries.json').then(
res=>{
  res.json().then(
    data=>{
      // console.log(Object.values(data)[1].length);
      // // console.log(Object.keys(data)[1])
      // var q1 = Object.values(data)[1].length-1;
      // console.log(Object.values(data)[1][q1]['confirmed']);
      // console.log(q1);

      if(1==1){
      	var temp = "";
      	for( let i =1; i < 187 ; i++){   // for 187 countries
      		var todaysobjectlength = Object.values(data)[i].length-x;
      		var country = Object.keys(data)[i];
      		var  confirmed = Object.values(data)[i][todaysobjectlength]['confirmed'];
      		var  deaths = Object.values(data)[i][todaysobjectlength]['deaths'];
      		var  recovered = Object.values(data)[i][todaysobjectlength]['recovered'];
      		console.log(country , confirmed , deaths , recovered);
      		temp+='<tr>';
      		temp+='<th scope="row">'+i+'</th>';
      		temp+= '<td>'+ country+'</td>';
      		temp+= '<td>'+ confirmed+'</td>';
      		temp+= '<td>'+ deaths+'</td>';
      		temp+= '<td>'+recovered+'</td>';
      		temp+='</tr>';

      	}
      	document.getElementById("temp").innerHTML = temp;
      }
    }
  )
}

